<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.laurabravopriegue.petiquiz.UserArea">

    <TextView
        android:text="Age "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="#740300"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="HOME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home"
        android:textColor="#740300"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="backtomenu"/>

    <Button
        android:text="START GAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#740300"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:id="@+id/startGame"
        android:layout_above="@+id/home"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="startgame"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:ems="10"
        android:id="@+id/etUserName"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="20sp"
        android:ems="10"
        android:layout_marginTop="14dp"
        android:id="@+id/etAge"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/etUserName"
        android:layout_alignStart="@+id/etUserName"/>

    <TextView
        android:text="User Name "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#740300"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:id="@+id/textView2"
        android:layout_above="@+id/etUserName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_height="120dp"
        android:id="@+id/tvWelcomeMsg"
        android:textColor="#740300"
        android:fontFamily="sans-serif-thin"
        android:textSize="45sp"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_width="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="110dp"
        app:srcCompat="@drawable/cupquiz"
        android:id="@+id/imageView3"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvWelcomeMsg"
        android:layout_toEndOf="@+id/tvWelcomeMsg"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_alignBottom="@+id/tvWelcomeMsg"/>
</RelativeLayout>

